{
	"name": "robclancy/xf-toolkit",
	"description": "A toolkit to use with XenForo for development.",
	"keywords": ["XenForo", "development"],
	"license": "DBAD",
	"authors": [
		{
			"name": "Robert Clancy",
			"email": "robert@mercenarydesign.net"
		}
	],
	"require": {
		"php": ">=5.3.0",
		"illuminate/container": "4.0.x",
        "illuminate/console": "4.0.x",
		"illuminate/filesystem": "4.0.x"
	},
	"replace": {
		"xf-console": "self.version",
		"xf-tools": "self.version",
		"xf-files": "self.version",
		"xf-build": "self.version"
	},
	"require-dev": {
		 "mockery/mockery": "0.7.2"
	},
	"autoload": {
        "psr-0": {
            "XfToolkit": "src/"
        }
    },
	"extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev"
}